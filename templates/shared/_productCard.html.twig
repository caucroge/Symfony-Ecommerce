<div class="col-{{ col }}">
  <div class="card">
    <img src="{{ product.mainPicture }}"
      alt="Image du produit"
      class="img-fluid" />
    <div class="card-body">
      <h4 class="card-title">
        {{ product.name }} ({{ product.price }} &euro;)
      </h4>
      <span class="badge rounded-pill bg-info">
        {{ product.category.name }}
      </span>
      <p class="card-text">
        {{ product.shortDescription }}
      </p>
      <a href="{{
        path(
          'product_read_slug',
          {
            slug: product.slug
          }
        )
        }}"
        class="btn btn-primary btn-sm">
        DÃ©tails
      </a>
      <a href="{{
        path(
          'panier_add',
          {
            id: product.id
          }
        )
        }}"
        class="btn btn-success btn-sm">
        Ajouter
      </a>
    </div>
  </div>
</div>
